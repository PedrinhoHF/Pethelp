<!DOCTYPE html>
<html lang="pt-br">

  <%-include('./partials/head.ejs') %>

<body class="cadastroBody">
  
    <%-include('./partials/header.ejs') %>
 

  <section>
    <h3 class="user-cad" > Cadastro de usuario </h3>
    <div class="align-row-userCad" >
      <form method="POST" >
        

        <label for="name" class="nome">Nome:</label>
        <br>
        <input type="text" id="name" name="name" required class="formulario">
        <br>

        <label for="endereco">Endere√ßo:</label>
        <br>
        <input type="text" id="endereco" name="endereco" required class="formulario">
        <br>

        <label for="number">Telefone/Whatsapp:</label>
        <br>
        <input type="number" id="number" name="number" required class="formulario">
        <br>

        <label for="email">E-mail:</label>
        <br>
        <input type="email" id="email" name="email" required class="formulario">
        <br>

        <label>Sexo:</label>
        <br>
        <select name="Genero" class="formulario">
          <option value="1">Masculino
          </option>
          <option value="2">Feminino
          </option>
          <option value="3">Outro
          </option>
        </select>
        <br>
        <label>Data de nascimento:</label>
        <br>
        <input type="date" id="date" name="date" class="formulario">
        <br>
        <label>CPF:</label>
        <br>

        <input type="text" name="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" class="formulario">
        <br>

        <label>PET:</label>
        <br>
        <select name="tipo" class="formulario">
          <option value="1">Cachorro
          </option>
          <option value="2">Gato
        </select>
        <br>
        <label for="name">Nome do pet:</label>
        <br>
        <input type="text" id="namePet" name="name" required class="formulario">
        <br>
        <label for="idadePet">Idade do pet:</label>
        <br>
        <input type="text" id="idadePet" name="Idade" required class="formulario">
        <br>




        <br>
        <div class="btn-userCad">
          <button type="button" class="btn-userCad-cad">Cadastrar</button>
          <button type="button" class="btn-userCad-limpar">Limpar</button>
        </div>
        <br>

    </div>
    <br>
    </form>


    
      <%- include('./partials/footer.ejs') %>
    
</body>
<%- include('./partials/js.ejs') %>
<%- include('./partials/email.ejs') %>
<%- include('./partials/Telefone.ejs') %>
</html>