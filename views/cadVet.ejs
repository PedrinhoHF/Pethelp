<!DOCTYPE html>
<html lang="pt-br">


<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/header.css" />
  <link rel="stylesheet" href="/stylesheets/footer.css" />
  <link rel="stylesheet" href="/stylesheets/cadVet.css" />
  <link rel="stylesheet" href="/stylesheets/promo.css" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
  <title>PetHelp</title>
</head>

<body class="cadastroBody">


  <%-include('./partials/header.ejs') %>

    <section>
      <h2 class="">Cadastro de Veterinário</h3>
        <div class="align-rowCad">
          <form method="POST">
            <label for="name" class="nome">Nome Completo:</label>
            <br>
            <input type="text" id="name" name="name" placeholder="Digite seu nome completo" required class="formulario">
            <br>

            <label for="name" class="nome">CRMV:</label>
            <br>
            <input type="text" id="crmv" name="crmv" placeholder="Digite seu CRMV" required class="formulario">
            <br>

            <label for="endereco">Endereço:</label>
            <br>
            <input type="text" id="endereco" name="endereco" placeholder="Digite seu endereço completo" required
              class="formulario">
            <br>

            <label for="number">Telefone/Whatsapp:</label>
            <br>
            <input type="text" name="telefone" id="telefone" placeholder="Digite um número de telefone" required
              class="formulario" maxlength="15" />
            <br>

            <label for="email">E-mail:</label>
            <br>
            <input type="email" id="email" name="email" placeholder="Digite um e-mail válido" required
              class="formulario">
            <br>

            <label>Sexo:</label>
            <br>
            <select name="Genero" class="formularioOption">
              <option value="0">Selecione seu gênero
              </option>
              <option value="1">Masculino
              </option>
              <option value="2">Feminino
              </option>
              <option value="3">Outro
              </option>
            </select>
            <br>
            <label>Data de nascimento:</label>
            <br>
            <input type="date" id="date" name="date" class="formularioOption">
            <br>
            <label>CPF:</label>
            <br>

            <input type="text" name="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" class="formulario">
            <br>
            <br>

            <div class="btn-sigIn">
              <button type="button" class="btn-verde">Cadastrar</button>
              <button type="button" class="btn-vermelho">Limpar</button>
            </div>
            <br>



        </div>
        <br>
        </form>
    </section>

    <%- include('./partials/footer.ejs') %>

</body>

<%- include('./partials/telefone.ejs') %>

  <%- include('./partials/js.ejs') %>

</html>