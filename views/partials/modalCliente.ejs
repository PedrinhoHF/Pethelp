<!-- Adicionar Pet -->
<div class="modal" id="modal">
  <div class="modal-container">
    <header class="modal-header">
      <h2>Consulta</h2>
      <span class="modal-close" id="modalClose">&#10006;</span>
    </header>

    <form
      class="modal-form"
      id="form"
      action="/cadastroPet/createPet"
      method="post"
    >
      <input
        name="nome"
        type="text"
        id="nome"
        data-index="new"
        class="modal-input"
        placeholder="Nome do pet"
        required
      />
      <input
        name="raca"
        type="text"
        id="raca"
        class="modal-input"
        placeholder="RaÃ§a"
        required
      />
      <input
        name="nascimento"
        type="date"
        id="date"
        class="modal-input"
        placeholder="Data"
        required
      />
      <input
        name="pelagem"
        type="text"
        id="Pelagem"
        class="modal-input"
        placeholder="Pelagem"
        required
      />
      <input
        name="sexo"
        type="text"
        id="Sexo"
        class="modal-input"
        placeholder="Sexo"
        required
      />

      <footer class="modal-footer">
        <button type="submit" class="btn-verde" id="salvar">Salvar</button>
        <button class="btn-vermelho" id="cancelar">Cancelar</button>
      </footer>
    </form>
  </div>
</div>

