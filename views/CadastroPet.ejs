<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/headerClienteCadastrado.css" />
  <link rel="stylesheet" href="/stylesheets/footer.css" />
  <link rel="stylesheet" href="/stylesheets/CadastroPet.css" />
  <link rel="stylesheet" href="/stylesheets/modalVet.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
  <title>Cadastro de Pets</title>
</head>

<body class="bodyCadPet">
  <%-include('./partials/header_cliente_cadastrado.ejs') %>
    <h3 class="H3CadPet">Lista de Pets</h3>

    <section class="row-CadPet">
      <div class="fotosCadpet">
        <% for (pets of pets) { %>
          <div class="cardCadPet">
            <img class="image" src="/images/<%=pets.foto%>" alt="money" />
            <h2>
              <%= pets.nome %>
            </h2>
            <a class="buttonCadPet" href="#dadosPet" target="_blank">Detalhe</a>
          </div>
          <% } %>
            <!-- AQUI FICARÁ AS IMAGENS DOS PETS -->
      </div>
    </section>
    <div class="seta"> </div>
    <div class="AdicionarPetbtn">
      <button type="button" class="AdicionarCadPet">+ Adicionar Pet</button>
    </div>
    <h3 class="H3DadosCadPet">Dados do Pet</h3>

    <section class="Forms">
      <!-- FORMULARIO -->
      <form  action="./CadastroPet.ejs" method="post">
      <div class="FormularioCadPet">
        <label for="nome">Nome:</label>
        <input type="text" class="FormCadPet" id="dadosPet" />

        <label for="Nascimento">Nascimento:</label>

        <input type="date" name="Nascimento" class ="FormCadPet-nascimento" id="dadosPet" />


        <label for="idade">Idade:</label>
        <input type="number" name="idade" class="FormCadPet" id="dadosPet" />
      </div>
      <div class="FormularioCadPet2">
        <label for="raça">Raça:</label>
        <input type="text" name="raça" class="FormCadPet" id="dadosPet" />

        <label for="Pelagem">Pelagem</label>
        <input type="text" name="Pelagem" class="FormCadPet" id="dadosPet" />

        <label for="Sexo">Sexo:</label>
        <select name="Sexo" class="FormCadPet" id="dadosPet" >
          <option value="1">Masculino
          </option>
          <option value="2">Feminino
          </option>
        </select>

        

    <div class="btn-editar">
      <button type="button" class="save-btn"> Salvar</button>
    </form>
    </div>
    </div>
    <h3 class="H3DadosCadPet">Consultas Marcadas</h3>
    <div class="Agendar-CadPet">
      <button type="button" class="AgendarConsulta-btn">Nova Consulta</button>
    </div>
    <table class="TabelaCadPet">
      <tr>
        <th>Nome Pet</th>
        <th>Data</th>
        <th>Horário</th>
        <th>Remarcar/Cancelar Consultas</th>
      </tr>

      <% consultas.forEach((consulta)=>{ %>
        <tr>
          <td>
            <%= consulta.pet.nome %>
          </td>

          <td>
            <%= consulta.pet.data %>
          </td>
          <td>
            <%= consulta.pet.horario %>
          </td>


          <td>
            <button type="button" class="btn-verde" id="cadastrarCliente">Remarcar</button>
            <button type="button" class="btn-vermelho">Cancelar</button>
          </td>
        </tr>
        <% }) %>
    </table>
    </section>
    <h3 class="Historico-CadPet">Historico de Consultas</h3>


      <table class="TabelaCadPet">
          <tr>
              <th>Pet</th>
              <th>Data</th>
              <th>Médico</th>
              <th>Especialidade</th>
              <th>Editar/Excluir Consultas</th>
          </tr>
          <% consultas.forEach((consulta)=>{ %>
            <tr>
                <td>
                    <%= consultas.pet.nome %>
                </td>
                <td>
                    <%= consultas.pet.data %>
                </td>
                <td>
                    <%= consultas.veterinario.nome %>
                </td>
                <td>
                    <%= consultas.especialidade %>
                </td>
                
                <td><%=<button type="button" class="btn-verde" id="Relatorio" onclick="openModal(consultas.diagnostico)">Relátorio</button>%></td>

                
            </tr>
            <% }) %>
      </table>
  </div>
   <%-include('./partials/modalCliente.ejs') %>
      <%-include('./partials/footer.ejs') %>
</body>
<script src="/javascripts/modalCliente.js"></script>


</html>